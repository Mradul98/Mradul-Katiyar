package Collection;

import java.util.HashMap;

public class NumberOfCharInString {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		String str="Today is a beautiful day";
		
		HashMap<Character,Integer> hasmap=new HashMap<>();
		
		char[] charecters=str.toCharArray();
		
		for(char charecter:charecters)
		{
			Integer integer=hasmap.get(charecter);
			
			if(integer==null)
			{
				hasmap.put(charecter,1);
			}
			else
			{
				hasmap.put(charecter,integer+1);
			}
		}
		

	}

}
